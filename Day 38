#include <iostream>
#include <cmath>
using namespace std;

int main() {
    int T;
    cin >> T;
    while (T--) {
        int N, A, B;
        cin >> N >> A >> B;
        int rounds = log2(N);
        int total_time = (rounds - 1) * (A + B) + A;
        cout << total_time << endl;
    }
    return 0;
}
