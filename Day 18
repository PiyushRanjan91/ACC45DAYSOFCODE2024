#include <iostream>
#include <cmath>
using namespace std;

int main() {
    int T;
    cin >> T;
    while (T--) {
        int N, A, B;
        cin >> N >> A >> B;
        int rounds = log2(N);
        int total_time = A * rounds + B * (rounds - 1);
        cout << total_time << endl;
    }
    return 0;
}
